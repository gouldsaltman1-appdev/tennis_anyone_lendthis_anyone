<div class="page-header">
  <h1>
    Equipment
    <a href="/equipment/new" class="btn btn-lg btn-success">New Equipment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Lender</th>
        <th>Category</th>
        <th>Price</th>
        <th>Image</th>
        <th>Time available start</th>
        <th>Time available end</th>
        <th>Actions</th>
      </tr>

      <% @equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.user_id %></td>
        <td><%= equipment.lender_id %></td>
        <td><%= equipment.category %></td>
        <td><%= equipment.price %></td>
        <td><%= equipment.image %></td>
        <td><%= equipment.time_available_start %></td>
        <td><%= equipment.time_available_end %></td>
        <td>
          <a href="/equipment/<%= equipment.id %>" class="btn btn-primary">Show</a>
          <a href="/equipment/<%= equipment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_equipment/<%= equipment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

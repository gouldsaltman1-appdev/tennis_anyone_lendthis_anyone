<div class="page-header">
  <h1>
    Lenders
    <a href="/lenders/new" class="btn btn-lg btn-success">New Lender</a>
  </h1>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Address</th>
        <th>Actions</th>
      </tr>

      <% @lenders.each do |lender| %>
      <tr>
        <td><%= lender.first_name %></td>
        <td><%= lender.last_name %></td>
        <td><%= lender.email %></td>
        <td><%= lender.address %></td>
        <td>
          <a href="/lenders/<%= lender.id %>" class="btn btn-primary">Show</a>
          <a href="/lenders/<%= lender.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_lender/<%= lender.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
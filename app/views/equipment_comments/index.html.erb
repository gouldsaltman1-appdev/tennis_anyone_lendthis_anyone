<div class="page-header">
  <h1>
    Equipment comments
    <a href="/equipment_comments/new" class="btn btn-lg btn-success">New Equipment comment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Equipment</th>
        <th>Borrower</th>
        <th>Actions</th>
      </tr>

      <% @equipment_comments.each do |equipment_comment| %>
      <tr>
        <td>
          <% if equipment_comment.piece_of_equipment.present? %>
            <a href="/equipment/<%= equipment_comment.piece_of_equipment.id %>">
              <%= equipment_comment.piece_of_equipment.user_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if equipment_comment.borrower.present? %>
            <a href="/borrowers/<%= equipment_comment.borrower.id %>">
              <%= equipment_comment.borrower.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/equipment_comments/<%= equipment_comment.id %>" class="btn btn-primary">Show</a>
          <a href="/equipment_comments/<%= equipment_comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_equipment_comment/<%= equipment_comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @equipment_comments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
